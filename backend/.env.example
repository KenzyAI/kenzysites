# WordPress AI SaaS - Environment Configuration
# Copy this file to .env and fill in your values

# Application
APP_NAME=WordPress AI SaaS
VERSION=1.0.0
DEBUG=False

# API Configuration  
API_V1_STR=/api/v1
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/wordpress_ai_saas
REDIS_URL=redis://localhost:6379/0

# AI Providers (Multi-provider as per PRD)
# Primary: Claude 3.5 Sonnet
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Secondary: GPT-4o  
OPENAI_API_KEY=your_openai_api_key_here

# Tertiary: Gemini 2.0
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Agno Framework Configuration
AGNO_API_KEY=your_agno_api_key_here
AGNO_MODEL_PROVIDER=anthropic
AGNO_MODEL_ID=claude-sonnet-4-20250514

# AI Credits System
AI_CREDITS_ENABLED=True
AI_CREDITS_REDIS_KEY_PREFIX=ai_credits:

# Content Generation
DEFAULT_MAX_TOKENS=4000
DEFAULT_TEMPERATURE=0.7

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# WordPress Integration
WP_CLI_PATH=/usr/local/bin/wp
WP_SITES_BASE_PATH=/var/www/sites

# Asaas Payment Gateway (Brazilian market)
ASAAS_API_KEY=your_asaas_api_key_here
ASAAS_SANDBOX=True
ASAAS_WEBHOOK_TOKEN=your_webhook_token_here

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=INFO

# Feature Flags (aligned with PRD phases)
FEATURE_CONTENT_GENERATION=True
FEATURE_SITE_CLONING=False
FEATURE_LANDING_PAGES=False
FEATURE_WHITE_LABEL=False