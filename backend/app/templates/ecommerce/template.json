    "{{SLIDE_1_TITLE}}",
    "{{SLIDE_1_SUBTITLE}}",
    "{{SLIDE_1_BUTTON}}",
    "{{SLIDE_1_URL}}",
    "{{SLIDE_2_IMAGE}}",
    "{{SLIDE_2_TITLE}}",
    "{{SLIDE_2_SUBTITLE}}",
    "{{SLIDE_2_BUTTON}}",
    "{{SLIDE_2_URL}}",
    "{{CATEGORY_1_NAME}}",
    "{{CATEGORY_1_IMAGE}}",
    "{{CATEGORY_1_URL}}",
    "{{CATEGORY_1_COUNT}}",
    "{{CATEGORY_2_NAME}}",
    "{{CATEGORY_2_IMAGE}}",
    "{{CATEGORY_2_URL}}",
    "{{CATEGORY_2_COUNT}}",
    "{{CATEGORY_3_NAME}}",
    "{{CATEGORY_3_IMAGE}}",
    "{{CATEGORY_3_URL}}",
    "{{CATEGORY_3_COUNT}}",
    "{{CATEGORY_4_NAME}}",
    "{{CATEGORY_4_IMAGE}}",
    "{{CATEGORY_4_URL}}",
    "{{CATEGORY_4_COUNT}}",
    "{{PROMO_BANNER_BG}}",
    "{{PROMO_TITLE}}",
    "{{PROMO_SUBTITLE}}",
    "{{PROMO_END_DATE}}",
    "{{BRAND_LOGOS}}",
    "{{REVIEW_1_TEXT}}",
    "{{REVIEW_1_AUTHOR}}",
    "{{REVIEW_1_PRODUCT}}",
    "{{REVIEW_2_TEXT}}",
    "{{REVIEW_2_AUTHOR}}",
    "{{REVIEW_2_PRODUCT}}",
    "{{NEWSLETTER_DISCOUNT}}",
    "{{INSTAGRAM_USERNAME}}",
    "{{PIX_KEY}}",
    "{{PIX_DISCOUNT}}",
    "{{BOLETO_DISCOUNT}}",
    "{{ML_STORE_URL}}",
    "{{MAGALU_STORE_URL}}",
    "{{AMERICANAS_STORE_URL}}",
    "{{SHOPEE_STORE_URL}}",
    "{{MAIN_CATEGORY}}",
    "{{PRIMARY_COLOR}}",
    "{{SECONDARY_COLOR}}",
    "{{ACCENT_COLOR}}",
    "{{OG_IMAGE}}"
  ]
}