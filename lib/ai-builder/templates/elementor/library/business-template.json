{
  "id": "business-001",
  "title": "Modern Business Template",
  "type": "page",
  "category": ["business", "corporate", "professional"],
  "tags": ["modern", "clean", "professional", "services", "corporate", "consulting"],
  "thumbnail": "https://via.placeholder.com/600x400/007cba/ffffff?text=Business+Template",
  "preview_url": "https://demo.example.com/business-template",
  "requiredPlugins": ["elementor"],
  "customizable": {
    "colors": true,
    "fonts": true,
    "content": true,
    "images": true
  },
  "content": [
    {
      "id": "hero-section",
      "elType": "section",
      "settings": {
        "layout": "boxed",
        "gap": "default",
        "height": "min-height",
        "height_tablet": "min-height",
        "height_mobile": "min-height",
        "custom_height": {
          "unit": "vh",
          "size": 100
        },
        "background_background": "classic",
        "background_color": "#f8f9fa",
        "background_image": {
          "url": "hero-image",
          "id": 1
        },
        "background_position": "center center",
        "background_attachment": "scroll",
        "background_repeat": "no-repeat",
        "background_size": "cover"
      },
      "elements": [
        {
          "id": "hero-column",
          "elType": "column",
          "settings": {
            "width": "100",
            "content_position": "middle"
          },
          "elements": [
            {
              "id": "hero-heading",
              "elType": "widget",
              "widgetType": "heading",
              "settings": {
                "title": "{{headline}}",
                "size": "xxl",
                "align": "center",
                "color": "#333333",
                "typography_typography": "custom",
                "typography_font_size": {
                  "unit": "px",
                  "size": 48
                },
                "typography_font_weight": "700",
                "margin": {
                  "unit": "px",
                  "top": "0",
                  "right": "0",
                  "bottom": "20",
                  "left": "0"
                }
              }
            },
            {
              "id": "hero-description",
              "elType": "widget",
              "widgetType": "text-editor",
              "settings": {
                "editor": "{{tagline}}",
                "align": "center",
                "text_color": "#666666",
                "typography_typography": "custom",
                "typography_font_size": {
                  "unit": "px",
                  "size": 18
                },
                "margin": {
                  "unit": "px",
                  "top": "0",
                  "right": "0",
                  "bottom": "30",
                  "left": "0"
                }
              }
            },
            {
              "id": "hero-button",
              "elType": "widget",
              "widgetType": "button",
              "settings": {
                "text": "{{cta_primary}}",
                "link": {
                  "url": "#contact",
                  "is_external": false,
                  "nofollow": false
                },
                "align": "center",
                "size": "lg",
                "button_background_color": "#007cba",
                "button_text_color": "#ffffff",
                "border_radius": {
                  "unit": "px",
                  "size": 5
                },
                "button_box_shadow": {
                  "horizontal": 0,
                  "vertical": 5,
                  "blur": 15,
                  "spread": 0,
                  "color": "rgba(0,124,186,0.3)"
                },
                "typography_typography": "custom",
                "typography_font_size": {
                  "unit": "px",
                  "size": 16
                },
                "typography_font_weight": "600",
                "padding": {
                  "unit": "px",
                  "top": "15",
                  "right": "30",
                  "bottom": "15",
                  "left": "30"
                }
              }
            }
          ]
        }
      ]
    },
