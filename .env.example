# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/wordpress_ai_builder

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-here-change-in-production

# AI APIs (opcional - pelo menos um deve ser configurado)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GOOGLE_AI_API_KEY=

# Payment Gateways (opcional)
ASAAS_API_KEY=
ASAAS_WEBHOOK_SECRET=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# WordPress (opcional)
WP_API_URL=
WP_API_KEY=

# Storage (opcional)
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=
S3_REGION=

# Redis
REDIS_URL=redis://localhost:6379

# Email (opcional)
SENDGRID_API_KEY=
EMAIL_FROM=noreply@example.com

# Analytics (opcional)
MIXPANEL_TOKEN=
SENTRY_DSN=

# Environment
NODE_ENV=development

# Backend API
NEXT_PUBLIC_API_URL=http://localhost:8000

# ===================
# WordPress Template System Configuration
# ===================

# WordPress Master Configuration
WORDPRESS_MASTER_URL=https://master.kenzysites.com
WP_MASTER_USER=admin
WP_MASTER_PASSWORD=your_secure_password_here

# Webhook Configuration
WP_WEBHOOK_SECRET=your_webhook_secret_key_256_chars_long

# Sync Service Configuration
SYNC_INTERVAL_MINUTES=30
SYNC_MAX_RETRIES=3

# ACF Pro Configuration
ACF_PRO_LICENSE=your_acf_pro_license_key

# Template Repository
TEMPLATES_REPOSITORY_PATH=/app/templates_repository
TEMPLATES_CDN_URL=https://cdn.kenzysites.com/templates

# Brazilian Market Configuration
TZ=America/Sao_Paulo
DEFAULT_CURRENCY=BRL

# ===================
# Shared Hosting Configuration (Alternative to Kubernetes)
# ===================

# Hosting Panel Type (cpanel, plesk, directadmin)
HOSTING_TYPE=cpanel

# Hosting Panel Access
HOSTING_URL=https://yourdomain.com:2083
HOSTING_USER=your_cpanel_user
HOSTING_PASSWORD=your_cpanel_password

# WordPress Multisite Configuration
MULTISITE_DOMAIN=kenzysites.com
MULTISITE_PATH=/public_html/multisite/
WP_CLI_PATH=/usr/local/bin/wp

# SSH Configuration (optional, for remote WP-CLI)
SSH_HOST=your-server.com
SSH_USER=your_ssh_user
SSH_KEY_PATH=/path/to/your/ssh/key

# Provisioning Mode (kubernetes or shared_hosting)
PROVISIONING_MODE=shared_hosting